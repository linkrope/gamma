{
    "name": "gamma",
    "description": "Extended Affix Grammar compiler generator",
    "authors": ["Mario Kröplin"],
    "copyright": "Copyright © 2025, Mario Kröplin",
    "license" : "BSL-1.0",
    "sourcePaths": ["include", "src"],
    "importPaths": ["include", "src"],
    "mainSourceFile": "src/gamma/main.d",
    "stringImportPaths": ["fix/epsilon"],
    "buildTypes": {
        "release-gamma": {
            "buildOptions": ["debugMode", "optimize", "inline", "debugInfo"]
        }
    },
    "configurations": [
        {
            "name": "gamma",
            "targetType": "executable"
        },
        {
            "name": "unittest",
            "dependencies": {
                "silly": ">=1.1.1"
            }
        },
        {
            "name": "example",
            "sourcePaths": ["test"],
            "importPaths": ["test"],
            "preBuildCommands": ["$DUB build"],
            "dependencies": {
                "silly": ">=1.1.1"
            }
        }
    ],
    "dependencies": {
        "argparse": "~>2.0.0"
    },
    "subPackages": [
        {
            "name": "runtime",
            "description": "runtime library for generated compiler",
            "targetType": "staticLibrary",
            "sourcePaths": ["include"],
            "importPaths": ["include", "src"],
            "sourceFiles": ["src/io.d", "src/log.d", "src/epsilon/soag/listacks.d"]
        }
    ]
}
