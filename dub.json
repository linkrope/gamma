{
    "name": "gamma",
    "description": "Extended Affix Grammar compiler compiler",
    "authors": ["Mario Kröplin"],
    "copyright": "Copyright © 2021, Mario Kröplin",
    "license" : "BSL-1.0",
    "sourcePaths": ["include", "src"],
    "importPaths": ["include", "src"],
    "mainSourceFile": "src/gamma/main.d",
    "stringImportPaths": ["fix/epsilon"],
    "configurations": [
        {
            "name": "gamma",
            "targetType": "executable"
        },
        {
            "name": "unittest",
            "dflags": ["-checkaction=context"],
            "dependencies": {
                "silly": ">=1.0.2"
            }
        },
        {
            "name": "example",
            "sourcePaths": ["test"],
            "importPaths": ["test"],
            "excludedSourceFiles": ["test/issues/*.d"],
            "preBuildCommands": ["$DUB build"],
            "dependencies": {
                "silly": ">=1.0.2"
            }
        },
        {
            "name": "issues",
            "sourcePaths": ["test/issues"],
            "sourceFiles": ["test/helper.d"],
            "importPaths": ["test"],
            "preBuildCommands": ["$DUB build"],
            "dependencies": {
                "silly": ">=1.0.2"
            }
        }
    ],
    "dependencies": {
        "argparse": ">=1.1.0"
    }
}
